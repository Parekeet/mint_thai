
<div id="orders">
  <% if ! current_user %>
    <h2>Please log in to place an order for pick up!</h2>
    <%= link_to 'Login', login_path %>
  <% else %>
    <h2>Welcome, how may we serve you?</h2>

    <br>
    <h4>Old Orders:</h4>
    <!-- <ul> -->
      <% @orders.each do |order| %>
        <div>
          <%= order.name %>
          <%= order.total %>
        </div>
      <% end %>
    <!-- </ul> -->

    <br><br>
    <h4>Create a New Order</h4>
    <%= form_for @new_order do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit "New Order" %>
    <% end %>
  <!--   <%#= redirect_to %> --><!--  #ADD ROUTE BACK TO ORDERS PAGE AND MAKE IT HIDDEN -->
  <% end %>
</div>

<%= link_to "Delete this order", orders_path, method: :delete, data: { confirm: "Are you sure you want to delete this order?"} %>



