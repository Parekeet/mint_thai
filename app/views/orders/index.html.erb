<body id="orders_page">

  <div id="orders">
      <h2>Welcome, how may we serve you?</h2>

      <br>

      <h4>Create a New Order</h4>
      <%= form_for @new_order do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.submit "New Order" %>
      <% end %>
      </ul>

      <br><br>

      <h4>Past Orders:</h4>
      <ul>
        <% @orders.each do |order| %>
          <div>
            <%= order.name %>
            <%= order.total %>
            <%= link_to "Delete this order", order_path(order.id),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this order?"} %>
            <%= link_to "Edit this order", edit_order_path(order.id),
                method: :edit %>
          </div>
        <% end %>
  </div>
</body>



