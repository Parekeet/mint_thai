<body id="orders_page">

  <div id="orders">
      <h2>Welcome, how may we serve you?</h2>

      <br>

      <h4>Create a New Order</h4>
      <%= form_for @new_order do |f| %>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
        <%= f.submit "New Order" %>
      <% end %>
      </ul>

      <br><br>

      <h4>Past Orders:</h4>
      <ul>
        <% @orders.each do |order| %>
          <div>
            <%= order.name %>&nbsp;
            <%= link_to '<i class="glyphicon glyphicon-eye-open" style="color: black;"></i>'.html_safe, order_path(order.id) %> &nbsp;
            <%= link_to '<i class="glyphicon glyphicon-pencil" style="color: black;"></i>'.html_safe, edit_order_path(order.id),
                method: :edit %> &nbsp;
            <%= link_to '<i class="glyphicon glyphicon-remove" style="color: red;"></i>'.html_safe, order_path(order.id),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this order?"} %>
          </div>
        <% end %>
  </div>
</body>

